<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow>
        <EditText android:hint="숫자1 입력" android:layout_span="5" android:id="@+id/Edit1"/>
    </TableRow>
    <TableRow>
        <EditText android:hint="숫자2 입력" android:layout_span="5" android:id="@+id/Edit2"/>
    </TableRow>
    <TableRow>
        <Button android:text="0" android:id="@+id/BtnNum0"/>
        <Button android:text="1" android:id="@+id/BtnNum1"/>
        <Button android:text="2" android:id="@+id/BtnNum2"/>
        <Button android:text="3" android:id="@+id/BtnNum3"/>
        <Button android:text="4" android:id="@+id/BtnNum4"/>
    </TableRow>
    <TableRow>
        <Button android:text="5" android:id="@+id/BtnNum5"/>
        <Button android:text="6" android:id="@+id/BtnNum6"/>
        <Button android:text="7" android:id="@+id/BtnNum7"/>
        <Button android:text="8" android:id="@+id/BtnNum8"/>
        <Button android:text="9" android:id="@+id/BtnNum9"/>
    </TableRow>
    <TableRow>
        <Button android:text="더하기" android:layout_span="5" android:id="@+id/BtnAdd"/>
    </TableRow>
    <TableRow>
        <Button android:text="빼기" android:layout_span="5" android:id="@+id/BtnSub"/>
    </TableRow>
    <TableRow>
        <Button android:text="곱하기" android:layout_span="5" android:id="@+id/BtnMul"/>
    </TableRow>
    <TableRow>
        <Button android:text="나누기" android:layout_span="5" android:id="@+id/BtnDiv"/>
    </TableRow>
    <TableRow>
        <TextView android:text="계산 결과 : " android:textColor="#FF0000" android:id="@+id/TextResult"/>
    </TableRow>
</TableLayout>