<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow>
        <EditText android:hint="숫자1 입력" android:layout_span="5" android:id="@+id/variable"/>
    </TableRow>
    <TableRow>
        <EditText android:hint="숫자2 입력" android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button android:text="0" android:id="@+id/btn0"/>
        <Button android:text="1" android:id="@+id/btn1"/>
        <Button android:text="2" android:id="@+id/btn2"/>
        <Button android:text="3" android:id="@+id/btn3"/>
        <Button android:text="4" android:id="@+id/btn4"/>
    </TableRow>
    <TableRow>
        <Button android:text="5" android:id="@+id/btn5"/>
        <Button android:text="6" android:id="@+id/btn6"/>
        <Button android:text="7" android:id="@+id/btn7"/>
        <Button android:text="8" android:id="@+id/btn8"/>
        <Button android:text="9" android:id="@+id/btn9"/>
    </TableRow>
    <TableRow>
        <Button android:text="더하기" android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button android:text="빼기" android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button android:text="곱하기" android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button android:text="나누기" android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <TextView android:text="계산 결과 : " android:textColor="#FF0000"/>
    </TableRow>
</TableLayout>